---
import BaseLayout from '../layouts/BaseLayout.astro';
import StepperNavigation from '../components/StepperNavigation.svelte';
import Gallery from '../components/Gallery/Gallery.svelte';
import RSVPForm from '../components/RSVP/RSVPForm.svelte';
import Guestbook from '../components/Guestbook/Guestbook.svelte';
---

<BaseLayout title="Nijao Wedding - Join Us for Our Special Day">
  <StepperNavigation client:load />

  <main>
    <!-- Hero Section -->
    <section id="home" class="relative min-h-screen flex items-center justify-center bg-gradient-to-b from-wedding-pink-clouds/40 via-wedding-matcha-green/30 to-white overflow-hidden">
      <!-- Decorative floating elements -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-20 left-10 w-20 h-20 bg-wedding-pink-clouds/15 rounded-full blur-lg animate-float"></div>
        <div class="absolute top-40 right-20 w-32 h-32 bg-wedding-matcha-green/15 rounded-full blur-xl animate-float animate-delay-400"></div>
        <div class="absolute bottom-20 left-1/4 w-24 h-24 bg-wedding-pink-clouds/10 rounded-full blur-lg animate-float animate-delay-600"></div>
      </div>
      <div class="text-center px-4 sm:px-6 lg:px-8 py-6 md:py-12 relative z-10">
        <h1 class="text-4xl sm:text-6xl lg:text-7xl font-brush text-wedding-matcha-green mb-2 md:mb-3 animate-fade-in-down drop-shadow-lg">
          Jave & Nianne
        </h1>
        <p class="text-xl sm:text-3xl font-handwriting text-wedding-pink-clouds mb-4 md:mb-6 animate-fade-in-up animate-delay-200 drop-shadow-md">
          We're Getting Married!
        </p>
        <p class="text-base sm:text-xl text-gray-700 max-w-2xl mx-auto mb-6 md:mb-8 animate-fade-in-up animate-delay-400">
          Join us as we celebrate our special day. We can't wait to share this moment with you.
        </p>
        <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center animate-fade-in-up animate-delay-600">
          <a
            href="#rsvp"
            class="bg-wedding-pink-clouds text-white px-8 py-3 rounded-full font-semibold hover:bg-wedding-pink-clouds/90 transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105 btn-glow transform scroll-smooth"
          >
            RSVP Now
          </a>
          <a
            href="#timeline"
            class="bg-wedding-matcha-green text-white border-2 border-wedding-matcha-green px-8 py-3 rounded-full font-semibold hover:bg-wedding-matcha-green/90 transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105 btn-glow transform scroll-smooth"
          >
            View Timeline
          </a>
        </div>
      </div>
    </section>

    <!-- Quick Info Section -->
    <section class="py-6 md:py-20 bg-gradient-to-b from-wedding-pink-clouds/10 via-wedding-matcha-green/10 to-transparent">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-8 text-center">
          <div class="bg-white p-4 md:p-6 rounded-lg shadow-md card-hover animate-fade-in-up animate-delay-200 border border-transparent hover:border-wedding-matcha-green/20">
            <div class="mb-3">
              <div class="w-12 h-12 mx-auto mb-2 bg-gradient-to-br from-wedding-pink-clouds/20 to-wedding-matcha-green/20 rounded-full flex items-center justify-center">
                <span class="text-2xl">üìÖ</span>
              </div>
            </div>
            <h3 class="text-xl md:text-2xl font-handwriting font-bold text-wedding-matcha-green mb-2">Date</h3>
            <p class="text-gray-700">January 8, 2027 Friday</p>
          </div>
          <div class="bg-white p-4 md:p-6 rounded-lg shadow-md card-hover animate-fade-in-up animate-delay-400 border border-transparent hover:border-wedding-pink-clouds/20">
            <div class="mb-3">
              <div class="w-12 h-12 mx-auto mb-2 bg-gradient-to-br from-wedding-pink-clouds/20 to-wedding-matcha-green/20 rounded-full flex items-center justify-center">
                <span class="text-2xl">üìç</span>
              </div>
            </div>
            <h3 class="text-xl md:text-2xl font-handwriting font-bold text-wedding-matcha-green mb-2">Location</h3>
            <p class="text-gray-700">
              <span class="font-semibold text-wedding-pink-clouds">Ceremony:</span><br />
              St. Therese of the Child Jesus and of the Holy Face Parish<br />
              <span class="text-sm">Santo Tomas-Lipa Road, Barangay Talisay, Lipa City, Batangas</span>
            </p>
            <p class="text-gray-700 mt-3">
              <span class="font-semibold text-wedding-pink-clouds">Reception:</span><br />
              10 22 Lipa<br />
              <span class="text-sm">Alaminos Rd, Brgy, Lipa City, Batangas</span>
            </p>
          </div>
          <div class="bg-white p-4 md:p-6 rounded-lg shadow-md card-hover animate-fade-in-up animate-delay-600 border border-transparent hover:border-wedding-matcha-green/20">
            <div class="mb-3">
              <div class="w-12 h-12 mx-auto mb-2 bg-gradient-to-br from-wedding-pink-clouds/20 to-wedding-matcha-green/20 rounded-full flex items-center justify-center">
                <span class="text-2xl">üëó</span>
              </div>
            </div>
            <h3 class="text-xl md:text-2xl font-handwriting font-bold text-wedding-matcha-green mb-2">Dress Code</h3>
            <p class="text-gray-700">Formal Attire</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Timeline Section -->
    <section id="timeline" class="py-20 bg-wedding-matcha-green/5">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl sm:text-5xl font-brush text-center text-wedding-matcha-green mb-12">
          Our Wedding Day Timeline
        </h2>

        <div class="space-y-8">
          <!-- Timeline Item 1 - Matcha Green -->
          <div class="relative pl-8 border-l-4 border-wedding-matcha-green">
            <div class="absolute -left-3 top-0 w-6 h-6 bg-wedding-matcha-green rounded-full"></div>
            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-2xl font-handwriting font-bold text-wedding-matcha-green mb-2">
                4:00 PM - Ceremony
              </h3>
              <p class="text-gray-700">
                Join us for our wedding ceremony. Please arrive 15 minutes early.
              </p>
            </div>
          </div>

          <!-- Timeline Item 2 - Pink Clouds -->
          <div class="relative pl-8 border-l-4 border-wedding-pink-clouds">
            <div class="absolute -left-3 top-0 w-6 h-6 bg-wedding-pink-clouds rounded-full"></div>
            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-2xl font-handwriting font-bold text-wedding-pink-clouds mb-2">
                5:00 PM - Cocktail Hour
              </h3>
              <p class="text-gray-700">
                Enjoy drinks and hors d'oeuvres while we take photos.
              </p>
            </div>
          </div>

          <!-- Timeline Item 3 - Matcha Green -->
          <div class="relative pl-8 border-l-4 border-wedding-matcha-green">
            <div class="absolute -left-3 top-0 w-6 h-6 bg-wedding-matcha-green rounded-full"></div>
            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-2xl font-handwriting font-bold text-wedding-matcha-green mb-2">
                6:00 PM - Reception
              </h3>
              <p class="text-gray-700">
                Dinner, dancing, and celebration!
              </p>
            </div>
          </div>

          <!-- Timeline Item 4 - Pink Clouds -->
          <div class="relative pl-8 border-l-4 border-wedding-pink-clouds">
            <div class="absolute -left-3 top-0 w-6 h-6 bg-wedding-pink-clouds rounded-full"></div>
            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-2xl font-handwriting font-bold text-wedding-pink-clouds mb-2">
                9:00 PM - After Party
              </h3>
              <p class="text-gray-700">
                Let's dance the night away! The party continues with music and celebration.
              </p>
            </div>
          </div>

          <!-- Timeline Item 5 - Matcha Green -->
          <div class="relative pl-8 border-l-4 border-wedding-matcha-green">
            <div class="absolute -left-3 top-0 w-6 h-6 bg-wedding-matcha-green rounded-full"></div>
            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-2xl font-handwriting font-bold text-wedding-matcha-green mb-2">
                10:00 PM - Dismissal
              </h3>
              <p class="text-gray-700">
                Thank you for celebrating with us! Safe travels home.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Gallery Section -->
    <section id="gallery" class="py-20 bg-gradient-to-b from-wedding-pink-clouds/10 via-wedding-matcha-green/10 to-transparent">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl sm:text-5xl font-brush text-center text-wedding-matcha-green mb-12">
          Our Photo Gallery
        </h2>

        <Gallery client:load />
      </div>
    </section>

    <!-- RSVP Section -->
    <section id="rsvp" class="py-20 bg-wedding-matcha-green/5">
      <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl sm:text-5xl font-brush text-center text-wedding-matcha-green mb-4">
          RSVP
        </h2>
        <p class="text-center text-gray-700 mb-12 text-lg">
          We'd love to celebrate with you! Please let us know if you'll be joining us.
        </p>

        <RSVPForm client:load />
      </div>
    </section>

    <!-- Guestbook Section -->
    <section id="guestbook" class="py-20 bg-gradient-to-b from-wedding-pink-clouds/10 via-wedding-matcha-green/10 to-transparent">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-4xl sm:text-5xl font-brush text-center text-wedding-matcha-green mb-4">
          Guestbook
        </h2>
        <p class="text-center text-gray-700 mb-12 text-lg">
          Share your well wishes and memories with us!
        </p>

        <Guestbook client:load />
      </div>
    </section>
  </main>

  <footer class="bg-gradient-to-r from-wedding-pink-clouds to-wedding-matcha-green text-white py-8 animate-fade-in">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-sm animate-pulse-slow">
        Made with ‚ù§Ô∏è for our special day
      </p>
    </div>
  </footer>
</BaseLayout>

